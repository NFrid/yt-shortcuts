{
  "name": "YouTube Shortcuts",
  "description": "Extended and configurable shortcuts for YouTube",
  "version": "1.0",
  "manifest_version": 3,
  "host_permissions": ["*://*.youtube.com/watch*"],
  "permissions": ["tabs"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/watch*"],
      "js": ["index.js"]
    }
  ],
  "commands": {
    "like": {
      "suggested_key": "Alt+L",
      "description": "Like the video"
    },
    "unlike": {
      "suggested_key": "Alt+K",
      "description": "Clear like/dislike"
    },
    "dislike": {
      "suggested_key": "Alt+J",
      "description": "Dislike the video"
    }
  }
}
